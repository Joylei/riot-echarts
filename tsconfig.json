{
    "compilerOptions": {
        "target": "es6",
        "sourceMap": false,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "none",
        "rootDir": "src"
    },
    "compileOnSave": true,
    "buildOnSave": true,
    "experimentalDecorators": true,
    "filesGlob": [
        "src/**/**.ts",
        "typings/index.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true,
        "formatOnSave": true
    },
    "exclude": [
        "node_modules"
    ]
}
